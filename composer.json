{
    "name": "kajuzi/laravel-paygate-payweb-3",
    "description": "A Laravel package to integrate PayGate's PayWeb3 API.",
    "keywords": [
        "Laravel",
        "paygate",
        "payweb3"
    ],
    "homepage": "https://github.com/kajuzi/laravel-paygate-payweb-3",
    "license": "MIT",
    "authors": [
        {
            "name": "Kajuzi Digital",
            "email": "dns@kajuzi.co.za"
        }
    ],
    "require": {
        "php": "^8.2",
        "ext-bcmath": "*",
        "guzzlehttp/guzzle": "^6.3|^7.0.1",
        "illuminate/support": "^10.0|^11.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "PWParsons\\PayGate\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PWParsons\\PayGate\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "PWParsons\\PayGate\\PayGateServiceProvider"
            ],
            "aliases": {
                "PayGate": "PWParsons\\PayGate\\PayGateFacade"
            }
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
